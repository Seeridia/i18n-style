{
    "name": "i18n-style",
    "version": "1.0.3",
    "description": "A tiny utility for converting words or sentences into i18n-style abbreviations.",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "require": "./dist/index.js",
            "import": "./dist/index.mjs"
        }
    },
    "scripts": {
        "build": "tsup",
        "test": "vitest"
    },
    "keywords": [
        "i18n",
        "abbreviation",
        "string",
        "utility"
    ],
    "license": "MIT",
    "devDependencies": {
        "tsup": "^8.0.1",
        "typescript": "^5.9.3",
        "vitest": "^4.0.9"
    }
}
